@page
@model IndexModel

<div class="chat" id="chat">
    <div class="pb-lg-4 chat-list">
        <transition-group name="list" tag="ul"  class="chat-messages">
            <li class="chat-message" v-for="[id, value] in toArray(messages).slice().reverse()" v-bind:key="id">
                <span class="gutter pr-lg-2 text-muted ">Ben</span>
                <span class="message pl-lg-2">{{value.text}}</span>
            </li>
        </transition-group>
    </div>


    <section class="post-container">
        <form v-on:submit.prevent="postMessage">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" v-model="message">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Post</button>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>